<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="8dp"
    >

    <RelativeLayout
        android:id="@+id/containerRelLayId"
        android:background="@drawable/card_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/single_image_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_background"

            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple Title Text"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/title_text_color"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            />
        <TextView
            android:id="@+id/tv_description"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Material Black #1 Color Scheme palette has 5 colors which are Vampire Black (#070707), Smoky Black (#0D0D0D), Chinese Black (#111111), Chinese Black (#161616) and Eerie Black (#191919).

This color combination was created by user Ratna. The Hex, RGB and CMYK codes are in the table below."
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/content_text_color"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:layout_alignStart="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"

            />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="250dp"
            android:layout_alignRight="@+id/tv_title"
            android:textColor="@color/content_text_color"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>